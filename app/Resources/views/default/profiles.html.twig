{% extends "base.html.twig" %}
{% block content %}
    <h1>Profiles</h1>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>Address</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.id }}</td>
                <td>{{ profile.companyName }}</td>
                <td>{{ profile.contactName }}</td>
                <td>{{ profile.address }}</td>
                <td>{{ profile.telephone }}</td>
                <td>{{ profile.email }}</td>
                <td><a href="profile/id/{{ profile.id }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}