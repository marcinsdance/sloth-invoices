{% extends "base.html.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8">&nbsp;</div>
            <div class="col-sm-4"><h1 class="text-uppercase">Profiles</h1></div>
        </div>
    </div>
    {% if profiles is empty %}
        <div class="row">
            <div class="col-sm-12 text-lg-center">
                There are no profiles yet.<br><br>
                <a class="btn btn-primary" href="{{ path('new-profile') }}">Add new profile</a>
            </div>
        </div>
    {% else %}
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Profile Name</th>
                <th>Company Name</th>
                <th>Contact Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for profile in profiles %}
                <tr>
                    <td>{{ profile.name }}</td>
                    <td>{{ profile.companyName }}</td>
                    <td>{{ profile.contactName }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-info" href="{{ path('edit-profile',{ 'profileId' : profile.id }) }}">Edit</a>
                            <a class="btn btn-danger" href="{{ path('delete-profile',{ 'id' : profile.id }) }}">Delete</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('new-profile') }}">Add new profile</a>
    {% endif %}
{% endblock %}