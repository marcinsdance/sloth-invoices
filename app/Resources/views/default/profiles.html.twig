{% extends "base.html.twig" %}
{% block content %}
    <h1>Profiles</h1>
    {% if profiles is empty %}
        <div class="row">
            <div class="col-sm-12">
                There are no profiles yet. <a href="{{ path('new-profile') }}">Add new profile</a>
            </div>
        </div>
    {% else %}
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Company Name</th>
                <th>Contact Name</th>
                <th>Address</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for profile in profiles %}
                <tr>
                    <td>{{ profile.id }}</td>
                    <td>{{ profile.companyName }}</td>
                    <td>{{ profile.contactName }}</td>
                    <td>{{ profile.address }}</td>
                    <td>{{ profile.telephone }}</td>
                    <td>{{ profile.email }}</td>
                    <td><a href="{{ path('edit-profile',{ 'id' : profile.id }) }}">Edit</a> | <a href="{{ path('delete-profile',{ 'id' : profile.id }) }}">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('new-profile') }}">Add new profile</a>
    {% endif %}
{% endblock %}