{% extends "base.html.twig" %}
{% block content %}
    <h1>Invoice ID #{{ invoice.id }}</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Qty</th>
            <th>Value</th>
            <th>Description</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td>{{ item.id }}</td>
            <td>{{ item.qty }}</td>
            <td>{{ item.value }}</td>
            <td>{{ item.description }}</td>
            <td><a href="item/edit/{{ item.id }}">Edit</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    <a href="{{ path('new-item', {'invoice': invoice.id}) }}">Add new item</a>
{% endblock %}